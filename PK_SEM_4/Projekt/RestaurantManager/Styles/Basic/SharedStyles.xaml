                        </Trigger>-->

                        <!--Changing Background when it is disabled-->
                        <!--<Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="MyBackground" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="#e6fff7"/>
                                </Setter.Value>
                            </Setter>
