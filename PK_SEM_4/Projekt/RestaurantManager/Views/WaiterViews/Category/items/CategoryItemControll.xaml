<UserControl x:Class="RestaurantManager.Views.WaiterViews.CategoryItemControll"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RestaurantManager.Views.WaiterViews"
             mc:Ignorable="d" 
             d:DesignHeight="180" d:DesignWidth="400">
    <Border Style="{StaticResource NobackgroundBorderStyle}" VerticalAlignment="Stretch"  Height="100" >
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            
            <Label x:Name="CategoryName" 
                   Content="{Binding _Name,Mode=OneWay,
                    FallbackValue='UNBOUND MealName'}" 
                       IsHitTestVisible="False"
                       VerticalContentAlignment="Center"
                       HorizontalContentAlignment="Center"
                       FontSize="20"/>
            </Grid>
            <!--Style="{StaticResource AbstractBaseLabelStyle}"-->
    </Border>
</UserControl>
