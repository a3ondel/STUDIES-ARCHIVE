<Window x:Class="RestaurantManager.Views.WaiterViews.SelectedTable.Items.PopupWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestaurantManager.Views.WaiterViews.SelectedTable.Items"
        mc:Ignorable="d"
        Title="Bill is yours" Height="700"  MaxHeight="700" MinHeight="700" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Background="Aquamarine" HorizontalContentAlignment="Center" VerticalContentAlignment="Top" FontSize="30" FontFamily="SimSun" FontWeight="Black">BILL</Label>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <TextBlock Padding="2" x:Name="Billmsg" Background="AntiqueWhite" FontSize="20" Text="{Binding StringFormsat,FallbackValue=ssssss}">
            </TextBlock>

        </ScrollViewer>
    </Grid>
</Window>
